.container
  div
    h3 Refresh movies on site:
    = link_to "Refresh movies", refresh_admin_movie_path(current_user), method: :patch , class:"btn btn-primary", role:"button"
  h3 Find movie on OMDb resource:
  = render partial: "shared/search_form", locals: { path: admin_movies_path}
  br
  - if @movies
    .table-responsive
      table.table.table-hover.mt-2
        thead.thead-inverse
          tr
            th scope="col"  Movie
            th scope="col"  Title
            th scope="col"  Year
            th scope="col"  imdbID
            th
        tbody.tcontent
          - @movies.each do |movie|
            tr
              td= image_tag(movie["Poster"], height:120, width:120 )
              td= movie["Title"]
              td= movie["Year"]
              td= link_to 'Add to db', new_admin_movie_path(imdbID: movie["imdbID"]), class:"btn btn-info", role:"button"
